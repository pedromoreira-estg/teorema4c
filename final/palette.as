package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import cores;	import bcolor;			public class palette extends MovieClip {				// ja disponíveis no objecto palette		// to-do: eventualmente construir programaticamente		palbranco 	: bcolor;		palvermelho : bcolor;		palverde		:	bcolor;		palazul			: bcolor;			palmarelo		: bcolor;				// botao activo		var activo : bcolor;				public function palette() {						// questões de escala			// scaleX = scaleY = 2.0;									// palette de cores (set das cores)			palbranco.setCor 		= cores.BRANCO;			palvermelho.setCor 	= cores.VERMELHO;			palazul.setCor 			= cores.AZUL;			palverde.setCor 		= cores.VERDE;			palamarelo.setCor 	= cores.AMARELO;						// branco fica a ser a cor activa			palbranco.on();			palvermelho.off();			palazul.off();			palverde.off();			palamarelo.off();						// botao activo = branco			activo = palbranco;						//eventos nos botoes			palbranco.addEventListener(MouseEvent.CLICK,onclick);			palvermelho.addEventListener(MouseEvent.CLICK,onclick);			palazul.addEventListener(MouseEvent.CLICK,onclick);			palverde.addEventListener(MouseEvent.CLICK,onclick);			palamarelo.addEventListener(MouseEvent.CLICK,onclick);		}				// ao click, desliga antigo, liga novo , muda cor activa		public function onclick(e:MouseEvent){			var clicked = e.currentTarget;			activo.off();			activo = clicked;			activo.on();		}				// get da cor activa na palette		public function get getCor() {			return activo.cor;		}	}	}